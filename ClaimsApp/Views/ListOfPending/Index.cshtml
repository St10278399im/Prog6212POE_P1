@model IEnumerable<ClaimsApp.Models.ListOfPending>

<h2>Pending Claims</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Claim ID</th>
            <th>Name</th>
            <th>Surname</th>
            <th>Hours</th>
            <th>Rate (£)</th>
            <th>Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var claim in Model)
    {
        <tr>
            <td>@claim.ClaimId</td>
            <td>@claim.Name</td>
            <td>@claim.Surname</td>
            <td>@claim.HoursWorked</td>
            <td>@claim.HourlyRate.ToString("C")</td>
            <td>@claim.Date.ToShortDateString()</td>
            <td>@claim.Status</td>
            <td>
                <form asp-action="Approve" asp-route-id="@claim.ClaimId" method="post" style="display:inline">
                    <button type="submit" class="btn btn-success btn-sm">Approve</button>
                </form>
                <form asp-action="Reject" asp-route-id="@claim.ClaimId" method="post" style="display:inline">
                    <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                </form>
                <a asp-action="Review" asp-route-id="@claim.ClaimId" class="btn btn-info btn-sm">Review</a>
            </td>
        </tr>
    }
    </tbody>
</table>