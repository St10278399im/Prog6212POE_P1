@model ClaimsApp.Models.ExportDocument

@{
    ViewData["Title"] = "Export Claims Document";
}

<h2 class="text-center mt-4">📤 Export Claims Document</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-info text-center">
        @TempData["Message"]
    </div>
}

<!-- Search bar -->
<form asp-action="ExportDocument" method="get" class="form-inline mb-4 d-flex justify-content-center">
    <input type="text" name="query" class="form-control w-50 mr-2" placeholder="Search claims..." value="@Model?.SearchQuery" />
    <button type="submit" class="btn btn-outline-primary">Search</button>
</form>

<!-- Export Button -->
<form asp-action="ExportToExcel" method="post" class="text-end mb-3">
    <button type="submit" class="btn btn-success">
        📥 Export to Excel
    </button>
</form>

@if (Model?.Claims != null && Model.Claims.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Claim ID</th>
                <th>Name</th>
                <th>Surname</th>
                <th>Description</th>
                <th>Status</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model.Claims)
            {
                <tr>
                    <td>@claim.ClaimId</td>
                    <td>@claim.Name</td>
                    <td>@claim.Surname</td>
                    <td>@claim.Description</td>
                    <td>@claim.Status</td>
                    <td>@claim.Date.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info text-center mt-4">No claims found.</div>
}
