

@{
    ViewData["Title"] = "Claims History";
}

<h2 class="text-center mt-4">Claims History</h2>

@if (Model != null && Model.Any())
{
    <table class="table table-bordered mt-4">
        <thead class="thead-dark">
            <tr>
                <th>Claim ID</th>
                <th>Name</th>
                <th>Surname</th>
                <th>Description</th>
                <th>Status</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.ClaimId</td>
                    <td>@claim.Name</td>
                    <td>@claim.Surname</td>
                    <td>@claim.Description</td>
                    <td>
                        @switch (claim.Status)
                        {
                            case "Approved":
                                <span class="badge bg-success">Approved</span>
                                break;
                            case "Rejected":
                                <span class="badge bg-danger">Rejected</span>
                                break;
                            case "Review":
                                <span class="badge bg-warning text-dark">Review</span>
                                break;
                            default:
                                <span class="badge bg-secondary">@claim.Status</span>
                                break;
                        }
                    </td>
                    <td>@claim.Date.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info mt-4 text-center">
        No approved, rejected, or reviewed claims found.
    </div>
}
