@model IEnumerable<ClaimsApp.Models.ListOfClaims>

<h2>Claims List</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Claim ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Hours Worked</th>
            <th>Hourly Rate (£)</th>
            <th>Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.ClaimId</td>
                <td>@claim.Name</td>
                <td>@claim.Surname</td>
                <td>@claim.HoursWorked</td>
                <td>@claim.HourlyRate.ToString("C")</td>
                <td>@claim.Date.ToShortDateString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@claim.ClaimId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@claim.ClaimId" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@claim.ClaimId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Create New Claim</a>
